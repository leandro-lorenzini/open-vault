doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
    link(rel='icon', href='/assets/icon.png')

    link(rel='stylesheet', href='/assets/style.css')
    title Download Open-Vault
  body
    section.hero-section.text-center
      img(src='/assets/icon.png', width='60', height='60', alt='Open-Vault Logo')
      h2 Download the Open Vault client
      p
        | Download the desktop application and login to securely start sharing passwords.
    .container.my-5
      .row.justify-content-center
        // Mac OS
        if mac
          .col-md-4.download-card
            .card
              .card-body.text-center
                i(class='fab fa-apple fa-3x mb-3')
                h5.card-title Mac OS
                a.btn.btn-custom(href=`/assets/open-vault-${version}-mac.dmg`, download) Download DMG
        // Windows
        if windows
          .col-md-4.download-card
            .card
              .card-body.text-center
                i.fab.fa-windows.fa-3x.mb-3
                h5.card-title Windows
                a.btn.btn-custom(href=`/assets/open-vault-${version}.exe`, download) Download EXE
        // Linux
        if linux
          .col-md-4.download-card
            .card
              .card-body.text-center
                i.fab.fa-linux.fa-3x.mb-3
                h5.card-title Linux
                a.btn.btn-custom(href=`/assets/open-vault_${version}_amd64.deb`, download) Download DEB
                a.btn.btn-custom(href=`/assets/open-vault-${version}.x86_64.rpm`, download) Download RPM
